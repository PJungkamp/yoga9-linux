# Maintainer: Jan Alexander Steffens (heftig) <heftig@archlinux.org>

pkgbase=linux-yoga
pkgver=6.0.9.arch1
pkgrel=1
pkgdesc='Linux'
_srctag=v${pkgver%.*}-${pkgver##*.}
url="https://github.com/archlinux/linux/commits/$_srctag"
arch=(x86_64)
license=(GPL2)
makedepends=(
  bc libelf pahole cpio perl tar xz
  xmlto python-sphinx python-sphinx_rtd_theme graphviz imagemagick texlive-latexextra
  git
)
options=('!strip')
_srcname=archlinux-linux
source=(
  "$_srcname::git+https://github.com/archlinux/linux?signed#tag=$_srctag"
  config         # the main kernel config file
  0001-ACPICA-Make-address-space-handler-install-and-_REG-e.patch
  0002-ACPI-EC-fix-ECDT-probe-ordering-issues.patch
  0003-HID-hid-sensor-custom-Allow-more-custom-iio-sensors.patch
  0004-HID-hid-sensor-custom-Add-LISS-custom-sensors.patch
  0005-IIO-hid-sensor-als-Use-generic-usage.patch
  0006-IIO-hid-sensor-prox-Use-generic-usage.patch
  0007-Add-IdeaPad-Usage-Mode-driver.patch
  0008-platform-x86-ideapad-laptop-support-for-more-special.patch
)
validpgpkeys=(
  'ABAF11C65A2970B130ABE3C479BE3E4300411886'  # Linus Torvalds
  '647F28654894E3BD457199BE38DBBDC86092693E'  # Greg Kroah-Hartman
  'A2FF3A36AAA56654109064AB19802F8B0D70FC30'  # Jan Alexander Steffens (heftig)
  'C7E7849466FE2358343588377258734B41C31549'  # David Runge <dvzrv@archlinux.org>
)
sha256sums=('SKIP'
            '2895449628b4260f1a2769262cf45ae91b5d85311e2b44906b9a643869df6bd0'
            '2a4f2d8406c55d8c385e2aaac9b8c7c92da7ca7ac640028cfc3309c7f3042951'
            '2161fd7d990f60d524e997285a3de1d9df424348dd94402b71b93cb0570fdee9'
            'f5379426c7c8f32d2eac491f569c04e7975471cc809f662568b1f79acdd3962f'
